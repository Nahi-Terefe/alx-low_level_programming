# Make a program called school by aplying all
# provided rules

CC=gcc
SRC=main.c school.c
OBJ=$(SRC:%.c=%.o)
NAME=school
.PHONY: all clean oclean fclean re
CFLAGS=-Wall -Werror -Wextra -pedantic
all: m.h $(OBJ)
	$(CC) -o $(NAME) $(SRC)
clean:
	$(RM) -f *~ $(NAME)
oclean:
	$(RM) -f *.o
fclean: clean oclean
re: oclean all
